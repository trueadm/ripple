    const div = container.querySelector("div");
    expect(div.id).toBe("item-0");
    button.click();
    flushSync();
    expect(div.id).toBe("item-1");
    button.click();
    flushSync();
    expect(div.id).toBe("item-2");
  });
  it("render dynamic style attribute", () => {
    component Basic() {
