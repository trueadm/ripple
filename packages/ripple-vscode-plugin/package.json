{
  "name": "ripple-vscode-plugin",
  "displayName": "Ripple for VS Code",
  "publisher": "ripplejs",
  "description": "Ripple JavaScript/TypeScript language support",
  "version": "0.0.27",
  "author": "Dominic Gannaway",
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "homepage": "https://ripplejs.com",
  "categories": [
    "Programming Languages"
  ],
  "main": "src/extension.js",
  "icon": "icons/logo.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trueadm/ripple.git",
    "directory": "ripple-vscode-plugin"
  },
  "scripts": {
    "copy-ts": "mkdir -p dist/node_modules && rm -rf dist/node_modules/typescript && cp -RL node_modules/typescript dist/node_modules/typescript",
    "build-extension": "esbuild src/extension.js --bundle --platform=node --target=node20 --outfile=dist/extension.js --external:vscode --external:typescript && pnpm copy-ts",
    "build-server": "esbuild src/server.js --bundle --platform=node --target=node20 --outfile=dist/server.js --external:typescript",
    "dist": "perl -pi -e 's/\"main\": \"src\\/extension.js\"/\"main\": \"dist\\/extension.js\"/' package.json",
    "src": "perl -pi -e 's/\"main\": \"dist\\/extension.js\"/\"main\": \"src\\/extension.js\"/' package.json",
    "package": "pnpm dist && pnpm copy-ts && vsce package --no-dependencies --out=ripple-vscode-plugin.vsix; pnpm src",
    "install-package": "code --install-extension ripple-vscode-plugin.vsix",
    "build-and-package": "pnpm build-extension && pnpm build-server && pnpm package",
    "build-package-and-install": "pnpm build-extension && pnpm build-server && pnpm package && pnpm install-package",
    "build-package-install-and-run": "pnpm build-extension && pnpm build-server && pnpm package && pnpm install-package && code"
  },
  "dependencies": {
    "@volar/language-core": "catalog:default",
    "@volar/language-server": "catalog:default",
    "@volar/typescript": "catalog:default",
    "@volar/vscode": "catalog:default",
    "ripple-language-server": "workspace:*",
    "typescript-plugin-ripple": "workspace:*",
    "volar-service-typescript": "catalog:default",
    "vscode-languageclient": "catalog:default",
    "vscode-uri": "catalog:default"
  },
  "peerDependencies": {
    "typescript": "catalog:vscode"
  },
  "devDependencies": {
    "esbuild": "catalog:default",
    "@vscode/vsce": "catalog:default"
  },
  "contributes": {
    "commands": [
      {
        "command": "ripple.goToSourceDefinition",
        "title": "Go to Source Definition",
        "category": "Ripple"
      }
    ],
    "languages": [
      {
        "id": "ripple",
        "aliases": [
          "Ripple",
          "ripple"
        ],
        "extensions": [
          ".ripple"
        ],
        "icon": {
          "light": "icons/logo.png",
          "dark": "icons/logo.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Ripple",
      "properties": {
        "ripple.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable default Ripple formatter"
        }
      }
    },
    "grammars": [
      {
        "language": "ripple",
        "scopeName": "source.ripple",
        "path": "./syntaxes/ripple.tmLanguage.json",
        "embeddedLanguages": {
          "meta.tag.js": "jsx-tags",
          "meta.tag.without-attributes.js": "jsx-tags",
          "meta.tag.attributes.js.jsx": "javascriptreact",
          "meta.embedded.expression.js": "javascriptreact",
          "source.js.embedded.ripple": "javascript",
          "source.js.embedded.jsx-children.ripple": "javascript",
          "source.js.embedded.ripple-isolated": "javascript",
          "source.css": "css"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ripple.goToSourceDefinition",
          "when": "tsSupportsSourceDefinition && resourceLangId == ripple",
          "group": "navigation@9"
        }
      ],
      "explorer/context": [
        {
          "command": "typescript.findAllFileReferences",
          "when": "tsSupportsFileReferences && resourceLangId == ripple",
          "group": "4_search"
        }
      ],
      "editor/title/context": [
        {
          "command": "typescript.findAllFileReferences",
          "when": "tsSupportsFileReferences && resourceLangId == ripple"
        }
      ],
      "commandPalette": [
        {
          "command": "typescript.reloadProjects",
          "when": "editorLangId == ripple && typescript.isManagedFile"
        },
        {
          "command": "typescript.goToProjectConfig",
          "when": "editorLangId == ripple && typescript.isManagedFile"
        },
        {
          "command": "typescript.sortImports",
          "when": "supportedCodeAction =~ /(\\s|^)source\\.sortImports\\b/ && editorLangId =~ /^ripple$/"
        },
        {
          "command": "typescript.removeUnusedImports",
          "when": "supportedCodeAction =~ /(\\s|^)source\\.removeUnusedImports\\b/ && editorLangId =~ /^ripple$/"
        }
      ]
    }
  }
}
